{
  "variables": {
    "vpc_region": "us-east-1",
    "ssh_username": "ec2-user"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "name": "freebsd-12.3-mbedtls",
      "vpc_id":  "vpc-d28c0ca9",
      "subnet_id": "subnet-a0d573af ",
      "region": "{{user `vpc_region`}}",
      "source_ami_filter": {
        "filters": {
          "image-id": "ami-0ffeb62fb62c3e3df",
          "product-code": "ejmg4fgac56dgb0xac6m4fpis"
        },
        "owners": ["aws-marketplace"],
        "most_recent": true
      },
      "instance_type": "t3.medium",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "jenkins-freebsd-amd64-{{isotime \"2006-01-02-1504\"}}",
      "ami_regions": ["eu-central-1"],
      "ami_users": [
        "987685672616"
      ],
      "snapshot_users": [
        "987685672616"
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2",
          "volume_size": "30",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [ "sleep 60" ]
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{.Path}}; /bin/sh  {{.Path}}",
      "inline": [
        "echo 'ssh-rsa  tf-staging-key' > /home/ec2-user/.ssh/authorized_keys",
        "echo 'ssh-rsa ' >> /home/ec2-user/.ssh/authorized_keys",
        "chmod 600 /home/ec2-user/.ssh/authorized_keys"
      ]
    },
    {
      "type": "shell",
      "script": "freebsd.sh",
      "execute_command": "{{.Vars}} su root -c '{{.Path}}'"
    }
  ]
}
